@{
    var usuarioLogado = Maturidade_Online.Servicos.ServicoDeAutenticacao.UsuarioLogado;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Maturidade Online</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/select2css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div id="navbar-container" class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/Projeto/Listar">
                    <img src="~/Content/img/logo-cwi.png" />
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Projeto", "Listar", "Projeto")</li>
                </ul>
                @if ("ADMINISTRADOR".Equals(usuarioLogado.Permissao.Nome))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Pilar", "Listar", "Pilar")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Subtópico", "Listar", "Subtopico")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Característica", "Listar", "Caracteristica")</li>
                    </ul>
                }
                <ul class="nav navbar-nav menu-usuario">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                            @usuarioLogado.Email
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Sair", "Deslogar", "Usuario")</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
