@model IEnumerable<Maturidade_Online.Models.SubtopicoViewModel>

@{
    ViewBag.Title = "Subtópicos";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Novo Subtópico", "Manter", "Subtopico", null,  new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-reponsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th class="hidden-xs hidden-sm">
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pontuacao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td class="hidden-xs hidden-sm">
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pontuacao)
        </td>
        <td>
            <a class="glyphicon glyphicon-pencil" href="~/Subtopico/Manter/@item.Id"></a>
            <a class="glyphicon glyphicon-trash" href="~/Subtopico/Excluir/@item.Id"></a>
        </td>
    </tr>
}

</table>
