@model IEnumerable<Maturidade_Online.Models.SubtopicoViewModel>

@{
    ViewBag.Title = "Subtópicos";
}






<div class="panel panel-default">
    <div class="panel-heading">
        <strong>
            Subtópicos
        </strong>
        @Html.ActionLink("Novo Subtópico", "Manter", "Subtopico", null, new { @class = "btn btn-success btn-xs pull-right" })
    </div>
    <div class="panel-body">


        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nome)
                        </th>
                        <th class="text-center">
                            @Html.DisplayName("Pilar")
                        </th>
                        <th class="text-center">
                            @Html.DisplayNameFor(model => model.Pontuacao)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nome)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Pilar.Titulo)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Pontuacao)
                            </td>
                            <td>
                                <div class="btn-group btn-group-xs">
                                    <a class="btn btn-xs btn-default" href="~/Subtopico/Manter/@item.Id">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    <a class="btn btn-xs btn-danger" href="~/Subtopico/Excluir/@item.Id">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
