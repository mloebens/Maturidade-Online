@model Maturidade_Online.Models.CaracteristicaListagemViewModel

<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayName("Nome")
        </th>
        <th>
            @Html.DisplayName("Subtópicos")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Caracteristicas)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @foreach (var subtopico in item.Subtopicos)
                {
                    <div class="caracteristica-subtopico">@Html.DisplayName(subtopico.Nome)</div>
                }

            </td>
            <td class="text-right">
                <div class="btn-group btn-group-xs">
                    <a class="btn btn-xs btn-default" href="~/Caracteristica/Manter/@item.Id">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </a>
                    <a class="btn btn-xs btn-danger btn-excluir" href="~/Caracteristica/Excluir/@item.Id">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
<div class="text-center">
    <button class="btn btn-default" id="btn-voltar-pagina">
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </button>
    <button class="btn btn-default" id="btn-avancar-pagina">
        <i class="fa fa-arrow-right" aria-hidden="true"></i>
    </button>
</div>