

@{
    ViewBag.Title = "Caracteristicas";
}

<legend>Caracteristicas</legend>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Caracteristicas</strong>
        <a href="/Caracteristica/Manter" class="btn btn-xs btn-success pull-right">
            <i class="fa fa-plus" aria-hidden="true"></i>
            <span>Nova Caracteristica</span>
        </a>
    </div>
    <div class="panel-body" id="container-caracteristica">
    </div>
</div>
@Html.Partial("_ModalExcluir")

@section scripts {
    <script>
        $.ajax({
            url: 'CarregarCaracteristicas',
            type: 'GET',
            data: {
                pagina: 0
            }
        })
        .then(function (resultado) {
            $('#container-caracteristica').html(resultado);
            //itemMagicoIndex.atualizarBotoesDeNavegacao();
        });
    </script>

}