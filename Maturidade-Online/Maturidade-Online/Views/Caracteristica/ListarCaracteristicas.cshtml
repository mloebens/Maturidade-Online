@model IEnumerable<Maturidade_Online.Models.CaracteristicaViewModel>

@{
    ViewBag.Title = "Caracteristicas";
}

<legend>Caracteristicas</legend>

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Caracteristicas</strong>
        <a href="/Caracteristica/Manter" class="btn btn-xs btn-success pull-right">
            <i class="fa fa-plus" aria-hidden="true"></i>
            <span>Nova Caracteristica</span>
        </a>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayName("Subtópicos")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @foreach (var subtopico in item.Subtopicos)
                {
                            <div class="caracteristica-subtopico">@Html.DisplayName(subtopico.Nome)</div>
                        }

                    </td>
                    <td class="text-right">
                        <div class="btn-group btn-group-xs">
                            <a class="btn btn-xs btn-default" href="~/Caracteristica/Manter/@item.Id">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                            <a class="btn btn-xs btn-danger btn-excluir" href="~/Caracteristica/Excluir/@item.Id">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
@Html.Partial("_ModalExcluir")